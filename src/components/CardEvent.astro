---
const { image, eventName } = Astro.props;
---

<div>
  <div class="rounded-xl w-full h-56 overflow-hidden">
    <div
      class="w-full h-full bg-cover bg-center hover:scale-110 transition-transform ease-in-out duration-200"
      style={`background-image: url('/images/${image}.webp')`}
    >
    </div>
  </div>
  <p class="text-white text-lg font-semibold mt-2 capitalize">
    {eventName}
  </p>
</div>
