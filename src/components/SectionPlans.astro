---
import Container from "./Container.astro";
import SubTitle from "./SubTitle.astro";
import CardPlan from "./CardPlan.astro";

const plans = [
  {
    href: "#",
    img: "plan1",
    title: "Basico",
    icon: "basico",
    description: "Escoge de entre un conjunto de plantillas prediseñadas",
    price: "Gratis",
    color: "pink",
  },
  {
    href: "#",
    img: "plan2",
    title: "Premium",
    icon: "premium",
    description: "Ponte en contacto para obtener una invitación personalizada",
    price: "$500.00 MXN",
    color: "purple",
  },
];
---

<section class="mb-24" id="plans">
  <Container>
    <SubTitle subtitle="nuestros planes" />
    <div class="flex flex-col md:flex-row justify-center gap-10">
      {plans.map((plan) => <CardPlan {...plan} />)}
    </div>
  </Container>
</section>
