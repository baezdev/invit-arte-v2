---
interface Props {
  href: string;
  img: string;
  title: string;
  icon: string;
  description: string;
  price: string;
  color: "pink" | "purple";
}

const { href, img, title, icon, description, price, color } = Astro.props;

const colors = {
  pink: "third",
  purple: "primary",
};
---

<a
  href={href}
  class={`block w-[425px] border-4 rounded-3xl hover:scale-105 transition-all duration-200 ease-in-out hover:border-${colors[color]} [&_img]:hover:grayscale-0 [&_div]:hover:opacity-100`}
>
  <img src={`/images/${img}.svg`} alt="" class="grayscale mx-6" />
  <p
    class="font-bold text-4xl text-center flex items-center gap-2 justify-center capitalize"
  >
    {title}
    <span><img src={`/icons/${icon}.svg`} alt={icon} /></span>
  </p>
  <p class="text-center mt-5">
    {description}
  </p>
  <div class="h-[2.5px] bg-gray-300 w-28 my-5 mx-auto rounded"></div>
  <p class="text-center font-semibold text-2xl capitalize">{price}</p>
  <div
    class={`py-3 bg-${colors[color]} mt-5 rounded-b-2xl opacity-0`}
    id="loquiero"
  >
    <p class="text-center font-medium text-lg text-white">Lo quiero</p>
  </div>
</a>
